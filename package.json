{
  "name": "command-bridge-client",
  "version": "0.0.2",
  "main": "dist/main.js",
  "scripts": {
    "tsc:build": "tsc",
    "lint": "eslint --ext .ts,.vue src",
    "vue:serve": "vue-cli-service serve",
    "tsc:watch": "tsc --watch",
    "vue:build": "vue-cli-service build",
    "electron:start": "cross-env NODE_ENV=development BUILD_TARGET=electron electron dist/src/main.js",
    "electron:build": "webpack --config webpack.config.js",
    "serve": "concurrently \"npm run vue:serve\" \"npm run tsc:watch\"",
    "build:webpack": "webpack --config webpack.config.js",
    "build": "npm run vue:build && npm run electron:build && electron-builder --publish=never",
    "publish": "electron-builder --publish=always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "axios": "^1.7.7",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.3.9",
    "i18next": "^23.16.4",
    "install": "^0.13.0",
    "node-machine-id": "^1.1.12",
    "npm": "^10.9.0",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5",
    "vuetify": "^3.7.3"
  },
  "devDependencies": {
    "@types/node": "^22.8.7",
    "@types/semver": "^7.5.8",
    "@types/vue-router": "^2.0.0",
    "@types/webpack-env": "^1.18.5",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vue/cli-service": "^5.0.8",
    "@vue/compiler-sfc": "^3.5.12",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vue-cli-service": "^5.0.10",
    "vue-loader": "^17.4.2",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.command-bridge-client.app",
    "productName": "CommandBridge",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "command-bridge",
        "repo": "cmd-bridge-client",
        "releaseType": "release"        
      }
    ]
  }
}
